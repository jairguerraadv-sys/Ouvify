#!/bin/sh
# Husky commit-msg hook
# Valida mensagens de commit usando Conventional Commits

# Extrai a mensagem do commit
commit_msg=$(cat "$1")

# Padr√£o do Conventional Commits
# tipo(escopo opcional): descri√ß√£o
# Exemplos: feat: add login, fix(auth): resolve token issue

conventional_pattern="^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\([a-zA-Z0-9_-]+\))?: .{1,100}$"

if ! echo "$commit_msg" | grep -qE "$conventional_pattern"; then
    echo ""
    echo "‚ùå Mensagem de commit inv√°lida!"
    echo ""
    echo "üìù Formato esperado: tipo(escopo): descri√ß√£o"
    echo ""
    echo "Tipos permitidos:"
    echo "  feat:     Nova funcionalidade"
    echo "  fix:      Corre√ß√£o de bug"
    echo "  docs:     Documenta√ß√£o"
    echo "  style:    Formata√ß√£o (n√£o afeta l√≥gica)"
    echo "  refactor: Refatora√ß√£o de c√≥digo"
    echo "  perf:     Melhoria de performance"
    echo "  test:     Adi√ß√£o/modifica√ß√£o de testes"
    echo "  build:    Build system ou depend√™ncias"
    echo "  ci:       Configura√ß√£o de CI"
    echo "  chore:    Tarefas de manuten√ß√£o"
    echo "  revert:   Reverter commit anterior"
    echo ""
    echo "Exemplos:"
    echo "  feat(auth): add two-factor authentication"
    echo "  fix: resolve login redirect issue"
    echo "  docs(readme): update installation instructions"
    echo ""
    exit 1
fi

echo "‚úÖ Mensagem de commit v√°lida"
