# ============================================
# .env.example - Ouvify Backend
# ============================================
# Copie este arquivo para .env e configure os valores
# NUNCA commite o arquivo .env com dados reais!

# ============================================
# üîê SEGURAN√áA (OBRIGAT√ìRIOS EM PRODU√á√ÉO)
# ============================================

# Chave secreta do Django - GERAR NOVA PARA PRODU√á√ÉO!
# Gere com: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-CHANGE-ME-IN-PRODUCTION

# Modo debug - SEMPRE False em produ√ß√£o
DEBUG=True

# Hosts permitidos (separados por v√≠rgula)
# Produ√ß√£o: seu-dominio.com,.railway.app
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# ============================================
# üóÑÔ∏è BANCO DE DADOS
# ============================================

# Railway fornece automaticamente DATABASE_URL
# Para PostgreSQL local, configure:
# DATABASE_URL=postgres://user:password@localhost:5432/ouvify_db

# Railway Private URL (melhor performance em produ√ß√£o)
# DATABASE_PRIVATE_URL=postgres://...

# Ou configure manualmente:
# DB_ENGINE=postgresql
# DB_NAME=ouvify_db
# DB_USER=postgres
# DB_PASSWORD=
# DB_HOST=localhost
# DB_PORT=5432

# ============================================
# üåê CORS E CSRF
# ============================================

# Origens permitidas para CORS (frontend URLs)
# Desenvolvimento: http://localhost:3000
# Produ√ß√£o: https://seu-frontend.vercel.app
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Permitir credenciais (cookies) - False em produ√ß√£o
CORS_ALLOW_CREDENTIALS=True

# ============================================
# üìß EMAIL (SendGrid)
# ============================================

# Backend de email
# Desenvolvimento: django.core.mail.backends.console.EmailBackend
# Produ√ß√£o: django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=

# Remetente padr√£o
DEFAULT_FROM_EMAIL=noreply@ouvify.com
SERVER_EMAIL=admin@ouvify.com

# ============================================
# ‚òÅÔ∏è CLOUDINARY (Upload de Imagens)
# ============================================

# Formato: cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_URL=

# Ou separadamente:
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# ============================================
# üí≥ STRIPE (Pagamentos)
# ============================================

# Chaves do Stripe
# Use chaves de teste (sk_test_...) em desenvolvimento
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# IDs dos produtos/pre√ßos no Stripe
STRIPE_PRICE_STARTER=
STRIPE_PRICE_PRO=

# ============================================
# üî¥ REDIS (Cache e Celery)
# ============================================

# URL do Redis (opcional em desenvolvimento)
REDIS_URL=redis://localhost:6379/0

# ============================================
# üìä MONITORAMENTO
# ============================================

# Sentry DSN para monitoramento de erros
SENTRY_DSN=

# Ambiente Sentry (production, staging, development)
SENTRY_ENVIRONMENT=development

# ============================================
# üîç ELASTICSEARCH (Busca Full-Text)
# ============================================

# URL do Elasticsearch (opcional)
ELASTICSEARCH_URL=

# ============================================
# üè¢ MULTI-TENANCY
# ============================================

# Habilitar fallback de tenant em desenvolvimento
# NUNCA True em produ√ß√£o!
TENANT_FALLBACK_ENABLED=True

# ============================================
# üß™ TESTES
# ============================================

# Modo de teste
TESTING=False

# ============================================
# üåç INTERNACIONALIZA√á√ÉO
# ============================================

LANGUAGE_CODE=pt-br
TIME_ZONE=America/Sao_Paulo

# ============================================
# üõ°Ô∏è CSP (Content Security Policy)
# ============================================

# Modo CSP: 'enforce' (bloqueia) ou 'report-only' (apenas reporta)
CSP_MODE=enforce

# For√ßar CSP em desenvolvimento (para testes)
FORCE_CSP=false
