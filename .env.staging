# =============================================================================
# CONFIGURAÇÕES DE STAGING - Ouvify
# Ambiente de testes antes da produção
# =============================================================================

# DJANGO CORE
SECRET_KEY=staging-secret-key-change-me-in-deployment

# MODO DEBUG - False para staging (mas com mais logs)
DEBUG=False

# HOSTS PERMITIDOS - Railway staging domains
ALLOWED_HOSTS=.railway.app,.up.railway.app,staging-ouvify.railway.app

# BANCO DE DADOS - PostgreSQL para staging
DB_ENGINE=postgresql
# DATABASE_URL será configurado automaticamente pelo Railway

# CORS - Permitir Vercel preview deployments
CORS_ALLOWED_ORIGINS=https://ouvify-frontend-staging.vercel.app,https://*.vercel-preview.app
CORS_ALLOW_CREDENTIALS=False

# HTTPS - Railway já fornece HTTPS
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
SESSION_COOKIE_HTTPONLY=True

# STRIPE - Usar chaves de teste para staging
STRIPE_PUBLIC_KEY=pk_test_XXXXX
STRIPE_SECRET_KEY=sk_test_XXXXX
STRIPE_WEBHOOK_SECRET=whsec_test_XXXXX

# LOGGING - Mais verboso para debugging
LOG_LEVEL=DEBUG

# EMAIL - Configurado mas desabilitado para MVP
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SENTRY - Configurar para staging
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id

# CLOUDINARY - Configurar para staging
CLOUDINARY_CLOUD_NAME=staging-cloud-name
CLOUDINARY_API_KEY=staging-api-key
CLOUDINARY_API_SECRET=staging-api-secret

# INTERNACIONALIZAÇÃO
LANGUAGE_CODE=pt-br
TIME_ZONE=America/Sao_Paulo

# =============================================================================
# FEATURE FLAGS PARA STAGING
# =============================================================================
FEATURE_EMAIL_NOTIFICATIONS=False
FEATURE_WEBHOOKS=False
FEATURE_ANALYTICS=True
FEATURE_EXPORT_CSV=True