# =============================================================================
# CONFIGURAÇÕES DE PRODUÇÃO - Ouvy SaaS
# ⚠️  NUNCA committar este arquivo no Git
# =============================================================================

# DJANGO CORE (use uma chave única gerada para produção)
# Gerar nova chave:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=CHANGE_ME_TO_A_UNIQUE_SECRET_KEY_IN_PRODUCTION

# MODO DEBUG - SEMPRE FALSE em produção
DEBUG=False

# HOSTS PERMITIDOS - Configure para seu domínio
ALLOWED_HOSTS=.ouvy.com.br,.railway.app,yourdomain.com

# BANCO DE DADOS
# Para produção, use PostgreSQL em vez de SQLite
DB_ENGINE=postgresql
DATABASE_URL=postgresql://user:password@host:5432/ouvy_saas

# CORS - Configure apenas para seus domínios
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=False

# HTTPS
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
SESSION_COOKIE_HTTPONLY=True

# STRIPE (configurar chaves reais de produção)
STRIPE_PUBLIC_KEY=pk_live_XXXXX
STRIPE_SECRET_KEY=sk_live_XXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXX

# LOGGING
LOG_LEVEL=INFO

# EMAIL
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu_email@gmail.com
EMAIL_HOST_PASSWORD=sua_senha_app

# INTERNACIONALIZAÇÃO
LANGUAGE_CODE=pt-br
TIME_ZONE=America/Sao_Paulo

# REDIS (para cache e sessions em produção)
REDIS_URL=redis://:password@host:6379/0

# SENTRY (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/xxxxx
